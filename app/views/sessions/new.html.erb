<h1>Login</h1>

<%= form_tag "/login", method: :post do %>
  
  <div>
    Email:
  </div>

  <div>
    <input type="email" name="email">
  </div>

  <div>
    Password:
  </div>
  <div>
    <input type="password" name="password">
  </div>

  <input type="submit" value="Log In">
  
<% end %>